# Example Web App Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# SERVER
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=9999

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=example_db
DB_USER=admin
DB_PASSWORD=
DB_SCHEMA=public

# Connection pool settings
DB_MIN_CONNECTION_POOL_SIZE=10
DB_MAX_CONNECTION_POOL_SIZE=20
DB_CONNECTION_POOL_RECYCLE_TIME=30

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_ENABLED=true
RATELIMIT_REQUESTS=100
RATELIMIT_WINDOW=60

# =============================================================================
# CORS
# =============================================================================
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================================================
# LOGGING
# =============================================================================
LOGGING_LEVEL=DEBUG

# =============================================================================
# SENTRY (Error Tracking)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# OPENTELEMETRY (Tracing)
# =============================================================================
OTEL_ENABLED=false
OTEL_SERVICE_NAME=example_web_app
OTEL_OTLP_ENDPOINT=
OTEL_OTLP_INSECURE=true
