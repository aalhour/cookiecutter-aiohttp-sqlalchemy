# {{cookiecutter.project_name}} Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# SERVER
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT={{cookiecutter.server_port}}

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST={{cookiecutter.db_host}}
DB_PORT={{cookiecutter.db_port}}
DB_NAME={{cookiecutter.db_name}}
DB_USER={{cookiecutter.db_user}}
DB_PASSWORD=
DB_SCHEMA={{cookiecutter.db_schema}}

# Connection pool settings
DB_MIN_CONNECTION_POOL_SIZE=10
DB_MAX_CONNECTION_POOL_SIZE=20
DB_CONNECTION_POOL_RECYCLE_TIME=30

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_ENABLED=true
RATELIMIT_REQUESTS=100
RATELIMIT_WINDOW=60

# =============================================================================
# CORS
# =============================================================================
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================================================
# LOGGING
# =============================================================================
LOGGING_LEVEL=DEBUG

# =============================================================================
# SENTRY (Error Tracking)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# OPENTELEMETRY (Tracing)
# =============================================================================
OTEL_ENABLED=false
OTEL_SERVICE_NAME={{cookiecutter.app_name}}
OTEL_OTLP_ENDPOINT=
OTEL_OTLP_INSECURE=true
